<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_ayah_table_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/single_surah_background"
    android:orientation="vertical"
    android:padding="15dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ayah_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="start"
            android:fontFamily="@font/abel"
            android:lineSpacingExtra="12sp"
            android:paddingStart="5dp"
            android:paddingEnd="15dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textAlignment="viewEnd"
            android:textColorHighlight="#A3FFEB3B"
            android:textColorLink="#009688"
            android:textCursorDrawable="@drawable/cursor"
            android:textDirection="anyRtl"
            android:textIsSelectable="true"
            android:textSize="30sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ayah_en_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:lineSpacingExtra="12sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textAlignment="viewStart"
            android:textColorHighlight="#A3FFEB3B"
            android:textColorLink="#009688"
            android:textCursorDrawable="@drawable/cursor"
            android:textDirection="ltr"
            android:textIsSelectable="true"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ayah_translation_1_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:lineSpacingExtra="12sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textAlignment="viewStart"
            android:textColorHighlight="#A3FFEB3B"
            android:textColorLink="#009688"
            android:textCursorDrawable="@drawable/cursor"
            android:textDirection="ltr"
            android:textIsSelectable="true"
            android:textSize="24sp" />
    </TableRow>
</TableLayout>