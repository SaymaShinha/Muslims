<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/single_surah_background"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/single_rev_surah_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cor_surah_number_id"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/rev_surah_en_name_id"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/rev_surah_ar_name_id"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView />

            <TextView
                android:id="@+id/rev_surah_trans_name_id"
                android:textSize="18sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/rev_surah_rev_type_id"
                android:textAlignment="viewEnd"
                android:textSize="18sp"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/rev_surah_note_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="@color/colorRed"/>
</LinearLayout>
